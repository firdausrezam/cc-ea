<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-full object-cover"
	/>
</section>

<section
	id="main-content"
	class="flex-1 h-full pt-8 bg-white"
>
	<div class="flex flex-col max-w-7xl mx-auto">
		<div class="w-full px-4 lg:px-0">
			<a
				href="{{page_path 'help_center'}}"
				class="flex items-center text-sm gap-2 text-fc-dark"
			>
				<i class="ph ph-caret-left text-md mt-0.5"></i>
				Back to Homepage
			</a>
		</div>
		<section
			class="flex-1 flex flex-col md:flex-row gap-4 px-4 lg:px-0 py-8"
		>
			<aside
				id="section-sidebar"
				class="w-full md:w-[25%] h-max menu rounded-box p-0 gap-2"
			>
				{{#each section.articles}}
					<a
						href="{{url}}"
						class="btn flex-1 flex justify-start items-center {{#is id ../article.id}}bg-fc-green{{else}}btn-outline{{/is}} text-fc-dark btn-fc-green border-fc-green 
						hover:border-fc-green hover:bg-fc-green text-start leading-4"
					>
						{{title}}
					</a>
				{{/each}}
			</aside>

			{{! Content Goes Here }}
			<article
				id="content"
				class="flex-1 flex flex-col px-0 md:px-4 py-4 md:py-0 gap-4"
			>
				<h1 class="text-2xl font-bold text-fc-dark">
					{{article.title}}
				</h1>
				<div class="w-full flex items-center mt-2">
					<div class="avatar">
						<div class="w-10 rounded-full">
							<img src="{{article.author.avatar_url}}" />
						</div>
					</div>
					<div class="flex flex-col ms-4">
						<h5
							class="text-sm text-fc-dark font-semibold"
						>{{article.author.name}}</h5>
						<p id="article-created" class="text-xs text-fc-dark">
							{{article.created_at}}
						</p>
					</div>
				</div>
				<div id="article-content" class="article-content flex flex-col gap-2">
					{{article.body}}
				</div>
			</article>
		</section>
	</div>
</section>

<section
	id="create-ticket"
	class="w-full flex items-center justify-center bg-white"
>
	<section class="max-w-7xl flex-1 flex flex-col items-center justify-center mx-auto py-8">
		<h4 class="text-2xl font-bold text-fc-dark text-center">Still having an
			issue?</h4>
		<p class="text-md font-semibold text-fc-dark text-center mt-2">
			Create a ticket to our support team to help you investigate further
			and solve your issue
		</p>
		<a
			href="{{page_path 'new_request'}}"
			class="btn w-full sm:w-[250px] bg-fc-green hover:bg-fc-green/85 border-none text-fc-dark mt-4"
		>
			<i class="ph ph-envelope text-fc-dark text-2xl"></i>
			Create a Ticket
		</a>
	</section>
</section>