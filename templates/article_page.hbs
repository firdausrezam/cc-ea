<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-full object-cover"
	/>
</section>

<section id="main-content" class="max-w-7xl mx-auto py-8">
	<div class="w-full">
		<a
			href="{{page_path 'help_center'}}"
			class="flex items-center text-sm gap-2"
		>
			<i class="ph ph-caret-left text-md mt-0.5"></i>
			Back to Homepage
		</a>
	</div>
	<section class="w-full flex gap-4 mt-4">
		<aside
			id="section-sidebar"
			class="join join-vertical w-full sm:w-[25%] border border-black/50 h-max"
		>
			<div class="collapse collapse-arrow join-item border border-white">
				<input type="radio" name="my-accordion-4" checked="checked" />
				<div
					class="collapse-title text-xl font-medium text-white bg-black"
				>
					{{section.name}}
				</div>
				<div class="collapse-content">
					<div class="flex flex-col items-start gap-2 pt-5">
						{{#each section.articles}}
							<a
								class="text-black hover:underline"
								href="{{url}}"
							>
								{{title}}
							</a>
						{{/each}}
					</div>
				</div>
			</div>
			{{#if related_articles}}
				<div
					class="collapse collapse-arrow join-item border border-white"
				>
					<input type="radio" name="my-accordion-4" />
					<div
						class="collapse-title text-xl font-medium text-white bg-black"
					>
						Related Articles
					</div>
					<div class="collapse-content">
						<div class="flex flex-col items-start gap-2 pt-5">
							{{related_articles}}
							{{!-- <a
								class="text-black hover:underline"
								href="{{url}}"
							>
								{{title}}
							</a> --}}
						</div>
					</div>
				</div>
			{{/if}}
		</aside>

		{{! Content Goes Here }}
		<article id="content" class="flex-1 flex flex-col p-4 gap-4">
			<h1 class="text-2xl font-bold">
				{{article.title}}
			</h1>
			<p class="text-base">
				{{article.body}}
			</p>
		</article>
	</section>
</section>