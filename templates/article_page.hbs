<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-full object-cover"
	/>
</section>

<section
	id="main-content"
	class="flex-1 h-full max-w-7xl flex flex-col mx-auto pt-8"
>
	<div class="w-full px-4 lg:px-0">
		<a
			href="{{page_path 'help_center'}}"
			class="flex items-center text-sm gap-2"
		>
			<i class="ph ph-caret-left text-md mt-0.5"></i>
			Back to Homepage
		</a>
	</div>
	<section class="flex-1 flex flex-col md:flex-row gap-4 mt-4 px-4 lg:px-0">
		<aside
			id="section-sidebar"
			class="w-full md:w-[25%] h-max menu rounded-box p-0 gap-2"
		>
			<li>
				<a href="#" class="bg-fc-green hover:bg-fc-green font-semibold">
					{{article.title}}
				</a>
			</li>
			{{#if promoted_articles}}
				{{#each promoted_articles}}
					<li>
						<a href="{{url}}" class="hover:bg-fc-green">
							{{title}}
						</a>
					</li>
				{{/each}}
			{{/if}}
		</aside>

		{{! Content Goes Here }}
		<article
			id="content"
			class="flex-1 flex flex-col px-0 md:px-4 py-4 md:py-0 gap-4 border-t md:border-t-0 md:border-l border-fc-dark/55"
		>
			<h1 class="text-2xl font-bold">
				{{article.title}}
			</h1>
			<div class="w-full flex items-center mt-2">
				<div class="avatar">
					<div class="w-10 rounded-full">
						<img src="{{article.author.avatar_url}}" />
					</div>
				</div>
				<div class="flex flex-col ms-4">
					<h5
						class="text-sm font-semibold"
					>{{article.author.name}}</h5>
					<p id="article-created" class="text-xs text-gray-400">
						{{article.created_at}}
					</p>
				</div>
			</div>
			<p class="text-base">
				{{article.body}}
			</p>
		</article>
	</section>

	<section
		id="create-ticket"
		class="w-full flex items-center justify-center bg-fc-dark"
	>
		<section class="max-w-7xl flex flex-col items-center mx-auto p-8">
			<h4 class="text-2xl font-bold text-white text-center">Still having
				an issue?</h4>
			<p class="text-md font-semibold text-white text-center mt-2">
				Create a ticket to our support team to help you investigate
				further and solve your issue
			</p>
			<a
				href="{{page_path 'new_request'}}"
				class="btn text-sm text-fc-dark font-bold uppercase border-0 bg-fc-green/85 hover:bg-fc-green rounded-md mt-4"
			>
				Create a ticket
			</a>
		</section>
	</section>
</section>