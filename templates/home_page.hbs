<section
	id="banner"
	class="w-full h-[300px] bg-[url('../settings/banner.jpg')] bg-cover bg-center object-cover bg-no-repeat"
>
</section>

<section id="main-content" class="max-w-7xl mx-auto flex gap-4 py-8">
	<aside
		id="section-sidebar"
		class="join join-vertical w-full sm:w-[25%] border border-black/50"
	>
		{{#each categories}}
			{{#each sections}}
				<div
					class="collapse collapse-arrow join-item border border-white"
				>
					<input
						type="radio"
						name="accordion-item"
						checked="checked"
					/>
					<div
						class="collapse-title text-xl font-medium text-white bg-black"
					>
						{{name}}
					</div>
					<div class="collapse-content">
						<div class="flex flex-col items-start gap-2 pt-5">
							{{#each articles}}
								<a
									class="text-black hover:underline"
									href="{{url}}"
								>
									{{title}}
								</a>
							{{/each}}
						</div>
					</div>
				</div>
			{{/each}}
		{{/each}}
	</aside>

	{{! Content goes here }}
	<article id="content" class="flex-1 flex flex-col p-4 gap-4">
		<h1 class="text-2xl font-bold">
			Only in EA SPORTS FC 24
		</h1>
		<p class="text-base">
			Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas,
			quibusdam illum. At quia aperiam sed, sapiente odio vitae error
			architecto.

			<br />

			Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cupiditate
			quibusdam vitae, ducimus eius voluptas sequi.
		</p>
	</article>
</section>