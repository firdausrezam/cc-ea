<section id="infobar-container" class="w-full flex flex-col">
	<div
		role="alert"
		class="infobar-component alert flex items-center alert-success bg-fc-green border-x-0 border-t-0 border-b border-fc-dark px-4 py-2 rounded-none"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			class="h-6 w-6 shrink-0 stroke-current"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
			></path>
		</svg>
		<span class="text-sm text-start font-semibold">Lorem, ipsum dolor sit
			amet consectetur adipisicing elit. A commodi nihil delectus sunt, ad
			labore nam impedit numquam hic aliquam?</span>
		<span class="infobar-dismiss ms-auto cursor-pointer">
			<i class="ph ph-x"></i>
		</span>
	</div>

	<div
		role="alert"
		class="infobar-component alert flex items-center alert-error bg-fc-green border-x-0 border-t-0 border-b border-fc-dark px-4 py-2 rounded-none"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			class="h-6 w-6 shrink-0 stroke-current"
			fill="none"
			viewBox="0 0 24 24"
			stroke="#ef4444"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
			/>
		</svg>
		<span class="text-sm text-start font-semibold">Error! Task failed
			successfully</span>
		<span class="infobar-dismiss ms-auto cursor-pointer">
			<i class="ph ph-x"></i>
		</span>
	</div>
</section>

<section id="banner" class="w-full min-h-[250px] h-full">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full min-h-[250px] object-cover object-center"
	/>
</section>

<section id="main-content" class="w-full">
	<section id="faq-section" class="flex-1 py-8">
		<article class="flex-1 md:max-w-7xl mx-auto flex flex-col px-4 xl:px-0">
			<h3 class="text-2xl md:text-3xl font-bold">
				FAQs
			</h3>
			<p class="mt-2">
				Please find the most frequently asked questions from our
				customer in this section
			</p>

			<div class="w-full grid sm:grid-cols-2 grid-cols-1 gap-4 mt-4">
				{{#each categories}}

					{{#each sections}}
						{{#is name "FAQ"}}
							{{#each articles}}
								<a
									id="article-{{id}}"
									href="{{url}}"
									class="btn bg-fc-dark hover:bg-fc-dark/95 w-full flex text-white text-start hover:underline rounded-md overflow-x-hidden"
								>
									<span class="w-full line-clamp-1">
										{{title}}
									</span>
								</a>
							{{/each}}
						{{/is}}
					{{/each}}

				{{/each}}
			</div>
		</article>
	</section>

	<section id="all-articles-section" class="flex-1 bg-fc-dark py-8">
		<article class="flex-1 md:max-w-7xl mx-auto flex flex-col px-4 xl:px-0">
			<h3 class="text-2xl text-white md:text-3xl font-bold">
				Other Helpful Articles
			</h3>
			<p class="mt-2 text-white">
				Please find the most frequently asked questions from our
				customer in this section
			</p>

			<div class="w-full grid sm:grid-cols-2 grid-cols-1 gap-4 mt-8">
				{{#each categories}}
					{{#is name "EA"}}
						{{#each sections}}
							<div class="w-full flex flex-col gap-2">
								<h4
									class="font-semibold text-white text-lg"
								>{{name}}</h4>
								{{#each articles}}
									{{#if (compare @index "<" 5)}}
										<a
											id="article-{{id}}"
											href="{{url}}"
											class="btn bg-fc-green/85 hover:bg-fc-green w-full flex text-fc-dark text-start rounded-md overflow-x-hidden"
										>
											<span class="w-full line-clamp-1">
												{{title}}
											</span>
										</a>
									{{/if}}
								{{/each}}
								{{#if (compare article_count ">" 5)}}
									<a
										href="{{url}}"
										class="btn bg-fc-green/85 hover:bg-fc-green text-white"
									>
										See more
										{{name}}
										articles
									</a>
								{{/if}}
							</div>
						{{/each}}
					{{/is}}
				{{/each}}
			</div>
		</article>
	</section>
	<section class="flex-1 flex flex-col items-center px-4 xl:px-0">
		<section
			id="search-section"
			class="w-full sm:w-[75%] lg:w-[50%] flex flex-col items-center py-12"
		>
			<h3 class="text-2xl text-center md:text-3xl font-bold">
				Can't find article to solve your issue?
			</h3>
			<p class="text-center mt-2">
				Please search for further articles below to resolve your current
				issue
			</p>

			<section class="w-full lg:w-[75%] sm:max-w-5xl mx-auto mt-4">
				<label
					class="input input-bordered flex flex-1 items-center gap-2 bg-transparent"
				>
					{{search instant=true submit=false class="w-full text-sm"}}
					{{! <input type="text" class="grow" placeholder="Search" /> }}
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 16 16"
						fill="currentColor"
						class="w-4 h-4 opacity-70"
					>
						<path
							fill-rule="evenodd"
							d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
							clip-rule="evenodd"
						/>
					</svg>
				</label>
			</section>

			<p class="text-center mt-4">
				or
			</p>

			<a
				href="{{page_path 'new_request'}}"
				class="btn text-sm text-fc-dark font-bold uppercase border-0 bg-fc-green/85 hover:bg-fc-green rounded-md mt-4"
			>
				Create a ticket
			</a>
		</section>
	</section>
</section>

