<section id="banner" class="w-full min-h-[250px] md:h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full min-h-[250px] object-cover object-center"
	/>
</section>

<section id="main-content" class="w-full md:max-w-7xl mx-auto py-8">
	{{! Content goes here }}
	<section id="content" class="w-full flex flex-col p-4 gap-8">
		{{#each categories}}
			{{#each sections}}
				<section id="section-{{name}}" class="">
					<h3 class="text-2xl font-bold">
						{{name}}
					</h3>
					<div class="mt-4">
						{{#each articles}}
							<div
								id="article-{{id}}"
								class="collapse collapse-arrow join-item border rounded-none"
							>
								<input
									id="accordion-article-{{id}}"
									type="radio"
									name="accordion-item"
								/>
								<div
									class="collapse-title text-xl font-medium text-white bg-black"
								>
									{{title}}
								</div>
								<div class="collapse-content">
									<div
										class="pt-4 w-full flex flex-col gap-2"
									>
										{{url}}
										{{body}}
									</div>
								</div>
							</div>
						{{/each}}
					</div>
				</section>
			{{/each}}
		{{/each}}
	</section>
</section>