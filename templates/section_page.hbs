<section id="banner" class="w-full h-[300px]">
	<img
		src="{{settings.banner}}"
		alt="banner"
		class="w-full h-full object-cover"
	/>
</section>

<section id="main-content" class="flex-1 h-full py-8 bg-fc-dark">
	<div class="flex flex-col max-w-7xl mx-auto px-4 lg:px-0">
		<div class="w-full px-4 lg:px-0">
			<a
				href="{{page_path 'help_center'}}"
				class="flex items-center text-sm gap-2 text-white"
			>
				<i class="ph ph-caret-left text-md mt-0.5"></i>
				Back to Homepage
			</a>
		</div>

		<h2
			class="text-xl md:text-2xl text-start text-white font-semibold mt-4"
		>
			{{section.name}}
		</h2>
		<p class="text-md text-start text-white mt-2">
			{{section.description}}
		</p>

		<div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
			{{#each section.articles}}
				<a
					id="article-{{id}}"
					href="{{url}}"
					class="btn btn-outline border-fc-green hover:border-fc-green hover:bg-fc-green w-full flex text-white hover:text-fc-dark text-start rounded-md overflow-x-hidden"
				>
					<span class="w-full line-clamp-1">
						{{title}}
					</span>
				</a>
			{{/each}}
		</div>
	</div>
</section>